<body >
    <% include ../viewcommn/adminComman.ejs%>
    

<div style="height: 100%;width:100%; margin-left:5%;margin-right: 5%;">
    <div >
        <div class="col-md-11  ">

            <div class="card-body">
                <% if(status1 == 'Opened'){ %>
                
                <div style="background-color: rgba(27, 151, 170,0.08);padding: 2%;border-radius: 1%;">
                        <h3><i class="fa fa-user"></i>&nbsp;<b> Students List</b></h3>
                        <p>Here's a list of all students,that you can enroll them.</p>    
                </div>
                <table class="table" style="text-align:left;width: 100%;">
                    <thead >
                    <tr>
                        <th>Name</th>
                        <th>E-mail</th>
                        <th>Level</th>
                        <th>Enroll</th>
                    </tr>
                    </thead>
                    <tbody>
                    <% for(let user of Users) { %>
                        <tr>
                            <td><%= (user.userName) %> </td>
                            <td><%= (user.email) %></td>
                            <td><%= (user.level) %></td>
                            <td > 
                                <a href="/course/enroll/<%= user.id %>"><button  class="btn btn-light"><i class="material-icons">how_to_reg</i> Enroll</button></a>
                            </tr>

                    <% } %>
                    </tbody>
                </table>

                <% } else {  %>
                    <div style="background-color: rgba(27, 151, 170,0.08);padding: 2%;border-radius: 1%;">
                        <h3><i class="fa fa-users"></i>&nbsp;<b> Registration is not available now!</b></h3>
                        <p>It's not the time to register courses.</p>    
                    </div>
                    <% } %>

            </div>
        </div>
    </div>
</div>

